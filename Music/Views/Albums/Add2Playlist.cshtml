@model Music.Models.NewModel

@{
    ViewBag.Title = "Add2Playlist";
}

<h2>Edit Playlist</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Playlist</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AlbumID)

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumID, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DisplayFor(model => model.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Playlist, "PlaylistID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PlayListId, Model.Playlist, htmlAttributes: new { @class = "form-control" })
                <!--Html.DropDownList("PlaylistID", null, htmlAttributes: new { class = "form-control" })-->
                @Html.ValidationMessageFor(model => model.Playlist, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
