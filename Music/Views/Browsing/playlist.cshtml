@model IEnumerable<Music.Models.Playlist>

@{
    ViewBag.Title = "playlist";
}

<h2>Playlists</h2>

<p>
    <a class="btn btn-success" href="/Browsing/Create3">Add Playlist</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details2", new { id = item.PlaylistID }) &nbsp;&nbsp;&nbsp;
            @Html.ActionLink("Edit", "Edit", new { id=item.PlaylistID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PlaylistID })
        </td>
    </tr>
}

</table>